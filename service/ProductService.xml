<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <service verb="find" noun="AllProducts" >
        <out-parameters>
            <parameter name="product" type="list"/>
        </out-parameters>
        <actions>
            <entity-find entity-name="Product" list="product" />
            <if condition="!product">
                <then>
                    <return message="No such product Exists"/>
                </then>
            </if>
        </actions>
    </service>

    <service verb="create" noun="Product" >
        <in-parameters>
            <auto-parameters entity-name="Product" include="nonpk"/>
        </in-parameters>
        <out-parameters>
            <parameter name="message" />
            <parameter name="productInfo" type="list"/>
        </out-parameters>
        <actions>
            <service-call name="create#Product" in-map="context" out-map="context"/>
            <entity-find-one entity-name="Product" value-field="productInfo">
                <field-map field-name="productId" from="productId"/>
            </entity-find-one>
            <set field="message" value="Product Created Successfully"/>
        </actions>
    </service>

    <service verb="get" noun="AProduct">
        <in-parameters>
            <parameter name="productId" required="true" />
        </in-parameters>
        <out-parameters>
            <parameter name="productInfo"/>
            <parameter name="itemInfo" type="list" />
            <parameter name="message"/>
        </out-parameters>
        <actions>
            <entity-find-one entity-name="Product" value-field="productInfo"/>
            <if condition="!productInfo">
                <then>
                    <return message="No product Exists with this product Id"/>
                </then>
            </if>
        </actions>
    </service>

    <service verb="update" noun="Product">
        <in-parameters>
            <auto-parameters entity-name="Product" />
        </in-parameters>
        <out-parameters>
            <parameter name="message"/>
            <parameter name="product" type="List"/>
        </out-parameters>
        <actions>
            <entity-find-one entity-name="Product" value-field="product">
                <field-map field-name="productId" from="productId"/>
            </entity-find-one>
            <if condition="product">
                <then>
                    <set field="product.size" from="size"/>
                    <set field="product.color" from="color"/>
                    <set field="product.productName" from="productName"/>
                    <entity-update value-field="product"/>
                    <set field="message"  value="Product Updated Successfully"/>
                </then>
                <else>
                    <set field="message"  value="No such Product with the given Id exists"/>
                </else>
            </if>
            <set field="productDetails" from="product"/>
        </actions>
    </service>
</services>